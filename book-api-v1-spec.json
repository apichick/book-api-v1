{
    "swagger": "2.0",
    "info": {
        "description": "Book API v1",
        "version": "1",
        "title": "Book API v1"
    },
    "host": "apigeetraining2018-eval-test.apigee.net",
    "basePath": "/book/v1",
    "schemes": [
        "https"
    ],
    "paths": {
        "/books": {
            "get": {
                "operationId": "getBooks",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Book"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apikey": []
                    }
                ]
            }
        },
        "/books/search": {
            "get": {
                "operationId": "searchBooks",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Search term",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Book"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (Missing search term)"
                    }
                },
                "security": [
                    {
                        "apikey": []
                    }
                ]
            }
        },
        "/books/{bookId}": {
            "get": {
                "operationId": "getBookById",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "bookId",
                        "in": "path",
                        "description": "Identifier of the book to return",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Book"
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                },
                "security": [
                    {
                        "apikey": []
                    }
                ]
            }
        }
    },
    "definitions": {
        "Author": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "dateOfBirth": {
                    "type": "string",
                    "format": "date"
                },
                "placeOfBirth": {
                    "type": "string"
                },
                "dateOfDeath": {
                    "type": "string",
                    "format": "date"
                },
                "placeOfDeath": {
                    "type": "string"
                }
            }
        },
        "Book": {
            "type": "object",
            "required": [
                "id",
                "title"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "publisher": {
                    "type": "string"
                },
                "year": {
                    "type": "string",
                    "pattern": "^[0-9]{4}$"
                },
                "price": {
                    "type": "string",
                    "pattern": "^\\$[0-9]+(\\.[0-9]{2})*$"
                },
                "author": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Author"
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "apikey": {
            "type": "apiKey",
            "in": "query",
            "name": "apikey"
        }
    }
}
